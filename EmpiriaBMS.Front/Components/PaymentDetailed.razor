@using EmpiriaBMS.Front.ViewModel.Components

@inject IDataProvider DataProvider
@inject IMapper Mapper

<div class="w-100">

    <h3 class="mb-1">@(isNew ? "Add Payment" : "Edit Payment")</h3>

    <EditForm Model="@Payment" class="row mt-3 gx-2 p-2">

        <div class="p-2 col-12">

            <div class="row">
                <div class="col-lg-6 col-md-12">
                    <!-- PaymentDate -->
                    <div class="form-group">
                        <label for="paymentDate">PaymentDate</label>
                        <input type="date"
                               class="form-control"
                               id="paymentDate"
                               @bind="@Payment.PaymentDate">
                    </div>
                </div>
                <div class="col-lg-6 col-md-12">
                    <!-- EstPaymentDate -->
                    <div class="form-group">
                        <label for="estPaymentDate">EstPaymentDate</label>
                        <input type="date"
                               class="form-control"
                               id="estPaymentDate"
                               @bind="@Payment.EstPaymentDate">
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-6 col-md-12">
                    <!-- PaymentDetails -->
                    <div class="form-group">
                        <label for="paymentDetails">PaymentDetails</label>
                        <InputText id="paymentDetails" @bind-Value="@Payment.PaymentDetails" class="form-control" />
                    </div>
                </div>
                <div class="col-lg-6 col-md-12">
                    <!-- DelayInPayment -->
                    <div class="form-group">
                        <label for="delayInPayment">DelayInPayment</label>
                        <input type="number"
                               class="form-control"
                               id="delayInPayment"
                               @bind="@Payment.DelayInPayment">
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-6 col-md-12">
                    <!-- Bank -->
                    <div class="form-group">
                        <label for="bank">Bank</label>
                        <InputText id="bank" @bind-Value="@Payment.Bank" class="form-control" />
                    </div>
                </div>
                <div class="col-lg-6 col-md-12">
                    <!-- DayCost -->
                    <div class="form-group">
                        <label for="dayCost">DayCost</label>
                        <input type="number"
                               class="form-control"
                               id="dayCost"
                               @bind="@Payment.DayCost">
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-6 col-md-12">
                    <!-- PendingPayments -->
                    <div class="form-group">
                        <label for="pendingPayments">PendingPayments</label>
                        <input type="number"
                               class="form-control"
                               id="pendingPayments"
                               @bind="@Payment.PendingPayments">
                    </div>
                </div>
                <div class="col-lg-6 col-md-12">
                    
                </div>
            </div>

        </div>

    </EditForm>

</div>
