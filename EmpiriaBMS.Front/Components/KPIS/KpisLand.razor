@using EmpiriaBMS.Front.Services
@using EmpiriaBMS.Front.Horizontal
@using ChartJs.Blazor;

@inject IDataProvider _dataProvider
@inject SharedAuthDataService _sharedAuthData
@inject IMapper _mapper

<div class="container-fluid m-2" style="max-width: 74vw !important;">

    <h3>Key Performance Indicators (KPIS)</h3>


    @if (_loading)
    {
        <div style="display: flex; justify-content: center; align-items: center; margin-top: 50px;">
            <FluentProgressRing />
        </div>
        @*
            <div style="display: flex; justify-content: center; align-items: center; min-height: 100vh;">
                <FilterProgressRing FilterLoading="@_startLoading" />
            </div>
        *@
    }
    else {

        <FluentTabs Orientation="Orientation.Vertical"
                    @bind-ActiveTabId="@activeid"
                    OnTabChange="HandleOnTabChange"
                    ShowClose="false"
                    Size="TabSize.Small"
                    TabsOverflow="true">

            @if (SeeTenderTableKPI)
            {
                <FluentTab Class="my-fluent-tab" LabelClass="my-fluent-tab-label" Label="Tender Table" Id="tab-1">
                    <div style="margin-top: 50px;">
                        <TenderTable />
                    </div>
                </FluentTab>
            }

            @if (SeeTenderTableKPI)
            {
                <FluentTab Class="my-fluent-tab" LabelClass="my-fluent-tab-label" Label="Hours Per Role Bar" Id="tab-2">
                    <div style="margin-top: 50px;">
                        <Chart Config="_hoursPerRoleBarConfig"></Chart>
                    </div>
                </FluentTab>
            }

            @if (SeeHoursPerRoleKPI)
            {
                <FluentTab Class="my-fluent-tab" LabelClass="my-fluent-tab-label" Label="Hours Per Role Pie" Id="tab-3">
                    <div style="margin-top: 50px;">
                        <Chart Config="_hoursPerRolePieConfig"></Chart>
                    </div>
                </FluentTab>
            }

            @if (SeeActiveDelayedProjectsKPI)
            {
                <FluentTab Class="my-fluent-tab" LabelClass="my-fluent-tab-label" Label="Delayed Projects Bar" Id="tab-4">
                    <div style="margin-top: 50px;">
                        <Chart Config="_delayedProjectsBarConfig"></Chart>
                    </div>
                </FluentTab>
            }

            @if (SeeActiveDelayedProjectsTypesCounterKPI)
            {
                <FluentTab Class="my-fluent-tab" LabelClass="my-fluent-tab-label" Label="Delayed Project Types Bar" Id="tab-5">
                    <div style="margin-top: 50px;">
                        <Chart Config="_delayedProjectsTypesBarConfig"></Chart>
                    </div>
                </FluentTab>
            }

            @if (SeeDelayedPaymentsKPI)
            {
                <FluentTab Class="my-fluent-tab" LabelClass="my-fluent-tab-label" Label="Delayed Payments" Id="tab-6">
                    <div style="margin-top: 50px;">
                        <DelayedPaymentsKpi />
                    </div>
                </FluentTab>
            }

            @if (SeeAllProjectsMissedDeadLineKPI || SeeMyProjectsMissedDeadLineKPI)
            {
                <FluentTab Class="my-fluent-tab" LabelClass="my-fluent-tab-label" Label="Projectes Missed Deadline" Id="tab-7">
                    <div class="col row mt-5" style="max-width: 30vw !important; margin-top: 50px;">
                        <div class="col-11">
                            <h5>Projects missed deadline: </h5>
                        </div>
                        <div class="col-1">
                            <h6>@_missedDeadLineProject.ToString("N2")%</h6>
                        </div>
                    </div>
                </FluentTab>
            }

            @if (SeeEmployeeTurnoverKPI)
            {
                <FluentTab Class="my-fluent-tab" LabelClass="my-fluent-tab-label" Label="Employees Turnover" Id="tab-8">
                    <div class="col table-responsive" style="margin-top: 50px;">
                        <table class="table table-hover table-success text-center caption-top">
                            <caption>Employee turnover kpi:</caption>
                            <thead>
                                <tr>
                                    <th>Employee</th>
                                    <th>Turnover</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>--</td>
                                    <td>No Ready Yet</td>
                                </tr>
                                @* @foreach (var item in _delayedProjects)
                                {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.Active</td>
                                </tr>
                                } *@
                            </tbody>
                        </table>
                    </div>
                </FluentTab>
            }

        </FluentTabs>

    }

</div>
