@page "/"
@page "/projects"
@inject TeamsFx teamsfx
@inject TeamsUserCredential teamsUserCredential
@inject MicrosoftTeams MicrosoftTeams
@inject IWebHostEnvironment HostEnvironment
@inject IConfiguration Configuration
@inject NavigationManager MyNavigationManager
@inject IDataProvider DataProvider
@inject IMapper Mapper

<!-- card shadow bg-white rounded container text-center align-middle -->
<div class="row justify-content-center mt-1 mb-1">
    <div class="col-auto" style="width: 100%; height: 100%;">
        @if (startLoading)
        {
            <div style="display: flex; justify-content: center; align-items: center; margin-top: 20%;">
                <FluentProgressRing />
            </div>
        }
        else
        {
            <div class="row m-5">

                <div class="p-2 col-lg-9 card shadow"
                     style="overflow-x:hidden; margin: 0 auto;">
                    
                     <!-- Headder -->
                    <div class="mt-2">
                        @if (_logedUser != null)
                        {
                            <div class="row ms-2 me-2" style="overflow:hidden;">
                                <div class="col-lg-10 col-md-8 col-sm-8">
                                    @foreach (var role in _loggedUserRoles)
                                    {
                                        <h4><b>@role.Name</b></h4>
                                    }
                                </div>
                                <div class="col-lg-2 col-md-4 col-sm-4 row primary-bg-color rounded-1">
                                    <FluentButton BackgroundColor="Transparent"
                                                  Appearance="Appearance.Lightweight">
                                        <span class="mt-2 h6"><strong>@(_logedUser.Hours)</strong>h</span>
                                        <FluentIcon Icon="Edit" />
                                    </FluentButton>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Table -->
                    <div class="table-responsive" style="min-height: 50vh; max-height: 55vh;">
                        <table class="table table-hover thead-light text-center">
                            <thead>
                                <tr>
                                    <th scope="col">Name</th>
                                    <th scope="col">PlanType</th>
                                    <th scope="col">Drawing</th>
                                    <th scope="col">Completed</th>
                                    <th scope="col">ManHours</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var project in _projects)
                                {
                                    <tr clss="align-middle d-flex"
                                        @onclick="@(() => OnSelectProject(project))">
                                        <td class="align-middle @((_selectedProject.Id.Equals(project.Id)? "highlight" : ""))"
                                            style="min-width: 110px;">
                                            <input type="text" class="form-control" @bind="project.Name">
                                        </td>
                                        <td class="align-middle @((_selectedProject.Id.Equals(project.Id)? "highlight" : ""))"
                                            style="min-width: 110px;">
                                            @* <select class="form-select"
                                                    @bind="project.PlanType">
                                                @foreach (var opt in projectPlanTypes)
                                                {
                                                    <option value="@opt">@opt</option>
                                                }
                                            </select> *@
                                        </td>
                                        <td class="align-middle @((_selectedProject.Id.Equals(project.Id)? "highlight" : ""))"
                                            style="min-width: 110px;">
                                            <input type="text"
                                                   class="form-control"
                                                   @bind="project.Drawing">
                                        </td>
                                        <td class="align-middle @((_selectedProject.Id.Equals(project.Id)? "highlight" : ""))"
                                            style="min-width: 120px;">
                                            <div class="input-group ">
                                                <input min="0" max="100" type="number" class="form-control" @bind="project.Completed">
                                                <div class="input-group-append">
                                                    <span class="input-group-text">%</span>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="align-middle @((_selectedProject.Id.Equals(project.Id)? "highlight" : ""))"
                                            style="min-width: 120px;">
                                            <div class="input-group">
                                                <input type="number" class="form-control" @bind="project.ManHours">
                                                <div class="input-group-append">
                                                    <span class="input-group-text">h</span>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Paginator -->
                    <div style="text-align: right;">
                        <Paginator Renderer="@_getProjects" Peginator="@_paginator" />
                    </div>
                
                </div>
                
            </div>
        }
    </div>
</div>

<FilterProgressRing FilterLoading="@filterLoading"/>
