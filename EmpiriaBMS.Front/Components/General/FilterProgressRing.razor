@if (FilterLoading)
{
    <div style="background-color: rgba(190, 191, 199, 0.5); position:absolute; top:0; left:0; width: 100%; height: 100%; z-index: 1; pointer-events: none;">
        <div style="position:absolute; top: 50vh; left: 50vw;">
            @* <FluentProgressRing /> *@

            <div class="spinner-border" style="width: 3rem; height: 3rem; color: #5A5C91;" role="status">
                <span class="sr-only"></span>
            </div>
            <div class="spinner-grow" style="width: 3rem; height: 3rem; background-color: #5A5C91;" role="status">
                <span class="sr-only"></span>
            </div>

        </div>
    </div>
}

@code {
    [Parameter]
    public bool FilterLoading { get; set;}
}
