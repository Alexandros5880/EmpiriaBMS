@page "/"
@page "/welcome"

@using EmpiriaBMS.Front.Components.Admin
@using EmpiriaBMS.Front.Services

@inject AuthorizeServices authorizeServices

@if (IsAdmin)
{
    <AdminHost />
}
else
{
    <Dashboard />
}

@code {
    public bool IsAdmin => authorizeServices.LoggedUserRoles.Select(r => r.Name).ToList().Contains("Admin")
                            || authorizeServices.LoggedUserRoles.Select(r => r.Name).ToList().Contains("CEO")
                            || authorizeServices.LoggedUserRoles.Select(r => r.Name).ToList().Contains("CTO")
                            || authorizeServices.LoggedUserRoles.Select(r => r.Name).ToList().Contains("COO");
}
