@layout AdminLayout

@using EmpiriaBMS.Front.Services
@inject PreviousLocationService previusLocationService
@inject IDataProvider DataProvider
@inject IMapper Mapper



<h3>Input Form</h3>

<form @onsubmit="Save">
    <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" class="form-control" id="name" @bind="_role.Name">
    </div>
    <div class="form-check">
        <input class="form-check-input" type="checkbox" id="isEmployee" @bind="_role.IsEmployee">
        <label class="form-check-label" for="isEmployee">Is Employee</label>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
