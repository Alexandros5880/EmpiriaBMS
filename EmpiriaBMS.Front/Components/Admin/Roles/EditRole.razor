@layout AdminLayout

@using EmpiriaBMS.Front.Services
@inject PreviousLocationService previusLocationService
@inject IDataProvider DataProvider
@inject IMapper Mapper



<div class="m-2">
    <h3>Input Form</h3>
    <form>
        <div class="form-group">
            <label for="name">Name:</label>
            <input type="text"
                   class="form-control"
                   id="name"
                   @readonly="@IsReadMode"
                   @bind="Role.Name">
        </div>
        <div class="form-check mt-1">
            <input class="form-check-input" type="checkbox" id="isEmployee" @bind="Role.IsEmployee">
            <label class="form-check-label" for="isEmployee">Is Employee</label>
        </div>
        <div class="row mt-3">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>
                                <input type="checkbox" @bind="IsAllChecked" />
                            </th>
                            <th>Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var permission in _permissions)
                        {
                            <tr>
                                <td>
                                    <input type="checkbox" @bind="permission.IsSelected" />
                                </td>
                                <td>@permission.Name</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="d-flex justify-content-between mt-2">
            <button type="submit"
                    class="btn btn-primary"
                    onclick="@(async () => await OnSave.InvokeAsync())">
                <span class="dashicons--saved"></span>
                <div>Save</div>
            </button>
            <button type="submit"
                    class="btn btn-primary"
                    onclick="@(async () => await OnCancel.InvokeAsync())">
                <span class="fxemoji--cancellationx"></span>
                <div>Cancel</div>
            </button>
        </div>
    </form>


</div>
