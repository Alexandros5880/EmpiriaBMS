{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.17/MicrosoftTeams.schema.json",
  "version": "1.0.0",
  "manifestVersion": "1.17",
  "id": "${{TEAMS_APP_ID}}",
  "name": {
    "short": "EmbiriaBMS-Staging",
    "full": "EmbiriaBMS-Staging"
  },
  "developer": {
    "name": "Alexandros Platanios",
    "websiteUrl": "${{TAB_ENDPOINT}}",
    "privacyUrl": "${{TAB_ENDPOINT}}/privacy",
    "termsOfUseUrl": "${{TAB_ENDPOINT}}/termsofuse"
  },
  "description": {
    "short": "Short description of Embiria BMS",
    "full": "Full description of Embiria BMS"
  },
  "icons": {
    "outline": "outline.png",
    "color": "color.png"
  },
  "accentColor": "#FFFFFF",
  "configurableTabs": [
    {
      "configurationUrl": "${{TAB_ENDPOINT}}/config",
      "canUpdateConfiguration": true,
      "scopes": [
        "team",
        "groupchat"
      ]
    }
  ],
  "staticTabs": [
    {
      "entityId": "index",
      "name": "Dashboard",
      "contentUrl": "${{TAB_ENDPOINT}}/dashboard",
      "websiteUrl": "${{TAB_ENDPOINT}}/dashboard",
      "scopes": [
        "personal"
      ]
    }
  ],
  "validDomains": [
    "${{TAB_DOMAIN}}"
  ],
  "webApplicationInfo": {
    "id": "${{AAD_APP_CLIENT_ID}}",
    "resource": "api://${{TAB_DOMAIN}}/${{AAD_APP_CLIENT_ID}}"
  }
}