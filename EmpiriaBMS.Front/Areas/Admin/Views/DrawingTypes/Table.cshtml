@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@{
    ViewData["Title"] = "Drawings Types";
}

@section Styles {
    <style>

    </style>
}

<h3>@ViewData["Title"]</h3>

<div class="table-responsive container-fluid">
    <table id="dataTable"
           class="table table-striped table-hover align-middle">
        <thead>
            <tr>
                <th scope="col" class="sticky-header"><h5>Name</h5></th>
                <th scope="col" class="sticky-header"><h5>Edit</h5></th>
                <th scope="col" class="sticky-header"><h5>Delete</h5></th>
            </tr>
        </thead>
        <tbody>
            <!-- Table body will be dynamically populated -->
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Fetch data using AJAX
            $.ajax({
                url: '/mvc/Admin/DrawingTypes/GetAllDrawingsTypes',
                method: 'POST',
                dataType: 'json',
                success: function (data) {
                    // Initialize DataTables
                    CreateDataTable(data);
                },
                error: function (xhr, status, error) {
                    console.error('Error fetching data:', error);
                }
            });
        });

        // Initialize DataTables
        function CreateDataTable(data) {
            $('#dataTable').DataTable({
                data: data,
                columns: [
                    { data: "name" },
                    {
                        data: null,
                        render: function (data, type, row) {
                            return '<span class="material-symbols--edit-outline edit-button" data-id="' + data.id + '"/>';
                        }
                    },
                    {
                        data: null,
                        render: function (data, type, row) {
                            return '<span class="fluent--delete-28-regular delete-button" data-id="' + data.id + '"/>';
                        }
                    }
                ],
                lengthMenu: [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]],
                language: {
                    lengthMenu: "Records _MENU_",
                    info: "Displaying _START_ to _END_ of _TOTAL_ drawing types.",
                },
                columnDefs: [
                    { "orderable": false, "targets": [1, 2] }
                ],
                responsive: true,
                processing: true,
                serverSide: false,
                pagingType: "full_numbers",
                paging: true,
                searching: true,
                order: [['0', 'asc']],
                initComplete: function () {
                    $('#dataTable tbody').on('click', '.edit-button', function () {
                        var id = $(this).data('id');
                        // Handle edit action
                        console.log('Edit clicked for ID: ' + id);
                    });

                    $('#dataTable tbody').on('click', '.delete-button', function () {
                        var id = $(this).data('id');
                        // Handle delete action
                        console.log('Delete clicked for ID: ' + id);
                    });
                }
            });
        }

    </script>
}
